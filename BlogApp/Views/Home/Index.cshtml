
@model IEnumerable<BlogEntity.Blog>

@{
    Layout = null;
}



<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.2/semantic.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
  </head>
 
  <body>

      <div class="ui container">
      <div class="ui fixed inverted menu">
        <div class="header item">
          <i class="blogger icon"></i>Blog Site
        </div>
        <a href="/" class="item">Home</a>
        <a href="../Blog/Create" class="item">New Posts</a>
        <a href="../Login/Logout" class="item">Logout</a>
      </div>
    </div>
    
<div class="ui main text container">
  <div class="ui huge header">Welcome to the Blog</div>

<div class="ui top attached segment">

  <div class="ui divided item">

@foreach (var item in Model){

    <div class="item">
      <div class="image">
        <img id="image" src="@Html.DisplayFor(modelItem => item.Image)" alt="">
      </div>


    <div class="content">
      <a class="header" href="/">@Html.DisplayFor(modelItem => item.Title)</a>
      <div class="meta">
          <span>@Html.DisplayFor(modelItem => item.Date)</span>
      </div>
      <div class="description">
        <p>@Html.DisplayFor(modelItem => item.Description)</p>
      </div>

      <div class="extra">
         <button>@Html.ActionLink("Read More", "Details", new { id=item.Id })</button>

      </div>
      </div>
  </div>
    
      }
</div>
</div>
</div>
</body>
</html>

